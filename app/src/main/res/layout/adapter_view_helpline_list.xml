<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    tools:cardCornerRadius="6dp"
    tools:cardElevation="3dp"
    tools:cardMaxElevation="3dp"
    tools:contentPadding="3dp"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="2dp">

    <RelativeLayout
        android:id="@+id/relativelayout_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="3dp">

        <TextView
            android:id="@+id/trainbusno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:text="Seva Name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/discreption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/trainbusno"
            android:layout_alignStart="@+id/trainbusno"
            android:layout_below="@+id/trainbusno"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="5dp"
            android:paddingTop="@dimen/cardview_default_elevation"
            android:text="Amount"
            android:textStyle="bold"
            android:typeface="serif"
            app:fontFamily="serif" />

        <Button
            android:id="@+id/imageButtonEdit"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="56dp"
            android:layout_height="37dp"
            android:layout_alignBottom="@+id/discreption"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:drawableBottom="@android:drawable/sym_action_call"
            android:drawableTint="@color/colorPrimary" />

    </RelativeLayout>

</androidx.appcompat.widget.CardView>
