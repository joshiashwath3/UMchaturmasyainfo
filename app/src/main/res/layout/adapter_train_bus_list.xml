<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    tools:cardCornerRadius="6dp"
    tools:cardElevation="3dp"
    tools:cardMaxElevation="3dp"
    tools:contentPadding="3dp"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="2dp">

    <RelativeLayout
        android:id="@+id/relativelayout_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="3dp">

        <TextView
            android:id="@+id/trainbusno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:text="Train Name &amp; No."
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/train_from_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/trainbusno"
            android:layout_alignStart="@+id/trainbusno"
            android:layout_below="@+id/trainbusno"
            android:layout_marginTop="5dp"
            android:paddingTop="@dimen/cardview_default_elevation"
            android:text="Train From To"
            android:textStyle="bold"
            app:fontFamily="monospace" />


        <TextView
            android:id="@+id/train_departur_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/train_from_to"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="12dp"
            android:paddingTop="@dimen/cardview_default_elevation"
            android:text="Train Departur Day"
            android:textStyle="bold"
            app:fontFamily="monospace" />

        <TextView
            android:id="@+id/train_timeing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/train_departur_day"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="12dp"
            android:paddingTop="@dimen/cardview_default_elevation"
            android:text="Train Timeing"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            app:fontFamily="monospace" />

        <Button
            android:id="@+id/imageButtonEdit"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:drawableTop="@drawable/ic_omlocation"
            android:text="UM"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />

    </RelativeLayout>

</androidx.appcompat.widget.CardView>
